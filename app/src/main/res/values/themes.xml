<resources>
    <!-- Base application theme. -->
    <style name="Theme.KKCodeTest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/trasparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textAppearanceHeadline1">@style/TextAppearance.KK.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.KK.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.KK.Body1</item>
    </style>
</resources>