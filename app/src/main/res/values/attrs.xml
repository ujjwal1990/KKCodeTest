<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MenuCardView">
        <attr name="cardTitle" format="string" />
        <attr name="cardBody" format="string" />
        <attr name="cardLeftImage" format="reference" />
        <attr name="cardLeftBackgroundColor" format="reference" />
        <attr name="cardRightImage" format="reference" />
        <attr name="buttonSmallButtonText" format="string" />
        <attr name="buttonLargeButtonText" format="string" />
        <attr name="cardLeftImageVisibility" format="boolean" />
        <attr name="cardRightImageVisibility" format="boolean" />
        <attr name="cardSmallButtonVisibility" format="boolean" />
        <attr name="cardLargeButtonVisibility" format="boolean" />
        <attr name="buttonType" format="enum">
            <enum name="WARNING" value="0" />
            <enum name="SUCCESS" value="1" />
            <enum name="ACTION" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LeftIconRightTextButtonView">
        <attr name="leftIcon" format="reference" />
        <attr name="rightText" format="string" />
    </declare-styleable>
</resources>